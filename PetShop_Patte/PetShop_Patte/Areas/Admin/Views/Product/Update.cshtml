@using PetShopPatte_Business.DTOs.ProductDTO
@model ProductCreateDTO

<!-- main-content -->
<div class="main-content">
    <!-- main-content-wrap -->
    <div class="main-content-inner">
        <!-- main-content-wrap -->
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>Update Product</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a asp-action="Index" asp-controller="Dashboard"><div class="text-tiny">Dashboard</div></a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <a href="#"><div class="text-tiny">Product</div></a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <div class="text-tiny">Update Product</div>
                    </li>
                </ul>
            </div>
            <!-- form-add-product -->
            <form method="post" enctype="multipart/form-data" class="tf-section-2 form-add-product">
                <div class="wg-box">
                    <fieldset class="name">
                        <div class="body-title mb-10">Product name<span class="tf-color-1">*</span></div>
                        <input asp-for="Name" class="mb-10" placeholder="Enter pet name" tabindex="0" value="" aria-required="true" required="">
                        <span asp-validation-for="Name" style="color:red"></span>
                    </fieldset>
                    <div class="gap22 cols">
                        <fieldset class="category">
                            <div class="body-title mb-10">Animal Type<span class="tf-color-1">*</span></div>
                            <select asp-for="AnimalTypeId" asp-items="ViewBag.AnimalTypes" class="mb-10" required></select>
                            <span asp-validation-for="AnimalTypeId" style="color:red"></span>
                        </fieldset>
                    </div>
                    <fieldset class="category">
                        <div class="body-title mb-10">Subcategory<span class="tf-color-1">*</span></div>
                        <select asp-for="SubcategoryId" asp-items="ViewBag.Subcategories" class="mb-10" required></select>
                        <span asp-validation-for="SubcategoryId" style="color:red"></span>
                    </fieldset>
                    <fieldset class="category">
                        <div class="body-title mb-10">Price<span class="tf-color-1">*</span></div>
                        <input asp-for="Price" type="number" step="0.01" class="mb-10" placeholder="Enter pet price" aria-required="true" required>
                        <span asp-validation-for="Price" style="color:red"></span>
                    </fieldset>

                </div>
                <div class="wg-box">
                    @* <fieldset>
                    <div class="body-title mb-10">Upload Image</div>
                    <input asp-for="ImgFile" class="mb-10" type="file" accept="image/*" required>
                    <span asp-validation-for="ImgFile" class="text-danger"></span>
                    </fieldset> *@
                    <fieldset>
                        <div class="body-title mb-10">Upload images</div>
                        <div class="item up-load">
                            <label class="uploadfile" for="myFile">
                                <span class="icon">
                                    <i class="icon-upload-cloud"></i>
                                </span>
                                <input asp-for="ImgFile" class="mb-10" type="file" accept="image/*" required>
                                <span asp-validation-for="ImgFile" class="text-danger"></span>
                            </label>
                        </div>
                </div>
                <div class="cols gap22">
                    <div class="cols gap10">
                        <button class="tf-button w-full" type="submit">Update Product</button>
                    </div>
                </div>
            </form>
            <!-- /form-add-product -->
        </div>
        <!-- /main-content-wrap -->
    </div>
    <!-- /main-content-wrap -->
