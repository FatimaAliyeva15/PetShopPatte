@using PetShopPatte_Business.DTOs.PetDetailDTO
@model PetDetailGetDTO


<div class="main-content">
    <!-- main-content-wrap -->
    <div class="main-content-inner">
        <!-- main-content-wrap -->
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>Pet Details</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a asp-action="Index" asp-controller="Dashboard"><div class="text-tiny">Dashboard</div></a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <a href="#"><div class="text-tiny">Pet</div></a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <div class="text-tiny">Pet Details</div>
                    </li>
                </ul>
            </div>
            <div class="wg-box">
                <fieldset class="name">
                    <div class="body-title mb-10">Pet Name</div>
                    <div>@Model.Name</div>
                </fieldset>
                <fieldset class="category">
                    <div class="body-title mb-10">Animal Type</div>
                    <div>@Model.TypeName</div>
                </fieldset>
                <fieldset class="brand">
                    <div class="body-title mb-10">Breed</div>
                    <div>@Model.Breed</div>
                </fieldset>
                <fieldset class="male">
                    <div class="body-title mb-10">Gender</div>
                    <div>@Model.Gender</div>
                </fieldset>
                <fieldset class="category">
                    <div class="body-title mb-10">Color</div>
                    <div>@Model.ColorName</div>
                </fieldset>
                <fieldset class="category">
                    <div class="body-title mb-10">Age</div>
                    <div>@Model.Age</div>
                </fieldset>
                <fieldset class="category">
                    <div class="body-title mb-10">Price</div>
                    <div>@Model.Price</div>
                </fieldset>
                <fieldset class="category">
                    <div class="body-title mb-10">Image</div>
                    @if (!string.IsNullOrEmpty(Model.ImgUrl))
                    {
                        <img src="@Model.ImgUrl" alt="Pet Image" style="max-width: 300px; max-height: 300px;">
                    }
                    else
                    {
                        <span>No image available</span>
                    }
                </fieldset>
            </div>
        </div>
    </div>
</div>